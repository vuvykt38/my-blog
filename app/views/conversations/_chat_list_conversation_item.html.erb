<%= link_to link do %>
  <div class="chat_list">
    <div class="chat_people">
      <div class="chat_img">
        <img src="<%= avatar %>"  class="rounded-circle float" alt="avatar" height="43" width="43">
      </div>
      <div class="chat_ib">
        <h5><%= sender_name %><span class="chat_date"><%= sent_at %></span></h5>
        <p><%= message %></p>
      </div>
    </div>
  </div>
<% end %>