<h1>Listing Posts</h1>
<table class="table">
  <tr>
    <th scope="col">ID Number</th>
    <th scope="col">Title</th>
    <th scope="col">Body</th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td scope="row"><%= post.id %></td>
      <td scope="row"><%= post.title %></td>
      <td scope="row"><%= post.body %></td>
      <td scope="row"><%= link_to 'Show', post_path(post) %></td>
      <td scope="row"><%= link_to 'Edit', edit_post_path(post) %></td>
      <td scope="row"><%= link_to 'Delete', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>