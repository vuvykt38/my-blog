<div class="row content">
  <div class="col-3"></div>
  <div class="col-6">
    <div class="row">
      <div class="col-9">
        <h1><%= current_user.full_name %></h1>
        <p><%= current_user.bio %></p><br>
        <%= link_to 'Edit Profile', edit_profile_path(current_user), class: 'btn btn-primary' %>
      </div>
      <div class="col-3">
        <img src="<%= current_user.avatar.url %>" class="rounded-circle float-right" alt="avatar"
             height="120" width="120">
      </div>
    </div>
  </div>
  <div class="col-3"></div>
</div>