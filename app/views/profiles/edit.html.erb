<div class="row content">
  <div class="col-3"></div>
  <div class="col-6">
    <%= form_with(url: profile_path(current_user), method: :put) do |form| %>
      <div class="form-group">
        <%= form.label :full_name  %><br>
        <%= form.text_field :full_name, class: "form-control", value: current_user.full_name %>
      </div>
      <div class="form-group">
        <%= form.label :bio  %><br>
        <%= form.text_area :bio, class: "form-control", value: current_user.bio %>
      </div>
      <div class="form-group">
        <%= form.file_field :avatar, class: "form-control" %>
      </div>
      <%= form.submit(class: "btn btn-primary")  %>
    <% end %>
  </div>
  <div class="col-3"></div>
</div>