<h1><%= current_user.full_name %></h1>
<img src="<%= current_user.avatar.url %>">
<%= form_with(url: profile_path(current_user), method: :put) do |form| %>
  <div class="form-group">
    <%= form.text_field :full_name, value: current_user.full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.file_field :avatar, class: "form-control" %>
  </div>
  <%= form.submit(class: "btn btn-primary")  %>
<% end %>